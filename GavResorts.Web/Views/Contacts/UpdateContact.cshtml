@model GavResorts.Web.Models.ContactViewModel

<h2>Update Contact</h2>

<form asp-action="UpdateContact">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telephone" class="control-label"></label>
        <textarea asp-for="Telephone" class="form-control"></textarea>
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <textarea asp-for="Email" class="form-control"></textarea>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Note" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Note" style="resize: none" rows="5" class="form-control">
                Add description
            </textarea>
        </div>
    </div>

    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</form>

